<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_pm_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="@dimen/btn_login_pad"
    android:background="@drawable/btn_login_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_pm_drawable"
        android:src="@drawable/pm_btn_drawable"
        android:layout_width="@dimen/iv_login_btn"
        android:layout_height="@dimen/iv_login_btn"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_pm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/sign_btn"/>

</LinearLayout>